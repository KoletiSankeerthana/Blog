<!DOCTYPE html>
<html>
<head>
    <title>My Blog</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>My Blog</h1>
    <a href="/new">‚ûï Add New Post</a>

    <% if (posts.length === 0) { %>
        <p>No blog posts yet. Start writing!</p>
    <% } else { %>
        <% posts.forEach((post) => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>

                <!-- Add Comment Form -->
                <form action="/comment/<%= post.id %>" method="POST">
                    <input type="text" name="comment" placeholder="Write a comment..." required>
                    <button type="submit">Comment</button>
                </form>

                <!-- Show Comments -->
                <% if (post.comments.length > 0) { %>
                    <div class="comments">
                        <strong>Comments:</strong>
                        <ul>
                            <% post.comments.forEach((c, index) => { %>
                                <li>
                                    <% if (typeof c === 'string') { %>
                                        <%= c %>
                                    <% } else { %>
                                        <%= c.text %>
                                        <% if (Array.isArray(c.replies)) { %>
                                            <ul>
                                                <% c.replies.forEach(r => { %>
                                                    <li>‚Ü≥ <%= r %></li>
                                                <% }); %>
                                            </ul>
                                        <% } %>
                                        <form action="/reply/<%= post.id %>/<%= index %>" method="POST">
                                            <input type="text" name="reply" placeholder="Reply..." required>
                                            <button type="submit">Reply</button>
                                        </form>
                                    <% } %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>

                <!-- Edit/Delete Buttons -->
                <a href="/edit/<%= post.id %>">‚úèÔ∏è Edit</a>
                <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Delete this post?')">üóëÔ∏è Delete</button>
                </form>
            </div>
        <% }); %>
    <% } %>
</body>
</html>
